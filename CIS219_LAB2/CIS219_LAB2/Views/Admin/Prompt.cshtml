@using CIS219_LAB2.Models
@using CIS219_LAB2.Controllers
@model IEnumerable<CIS219_LAB2.Models.ApplicationUser>

@{
    ViewBag.Title = "Promote/Demote User";
}

<h2>Promote/Demote User</h2>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                - @Html.DisplayFor(modelItem => item.role) -
            </td>

            <td>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken();
                    <input type="hidden" name="userId" value="@Html.DisplayFor(modelItem => item.Id)" />
                        if(item.role == null)
                        {
                            {ViewBag.buttonOutput="Promote";}
                        }
                        else
                        {
                            {ViewBag.buttonOutput="Demote";}
                        }
                    
                    
                    <input type="submit" value="@ViewBag.buttonOutput" />
                }
            </td>
        </tr>
    }

</table>
